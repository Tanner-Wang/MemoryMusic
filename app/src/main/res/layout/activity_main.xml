<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_page_background"
    android:orientation="vertical"
    tools:context="com.example.administrator.memorymusic.MainActivity">

    <!--subject bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_activity"
            style="@style/SubjectBar"
            android:text="@string/subject_home" />

        <TextView
            android:id="@+id/ranking_activity"
            style="@style/SubjectBar"
            android:text="@string/subject_ranking" />

        <TextView
            android:id="@+id/mv_activity"
            style="@style/SubjectBar"
            android:text="@string/subject_mv" />

        <TextView
            android:id="@+id/myMusic_activity"
            style="@style/SubjectBar"
            android:text="@string/subject_my_music" />

        <ImageButton
            android:id="@+id/search_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:scaleType="center"
            android:src="@drawable/search" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                style="@style/Advertise"
                android:src="@drawable/image1" />
<!--recommend for you start here-->
            <LinearLayout style="@style/SubTitleLinearLayout">

                <TextView
                    style="@style/SubTitle"
                    android:text="@string/recommend_for_you" />
<!--part 1 start here-->
                <LinearLayout
                    style="@style/SubTitleSmallLinearLayout">

                    <LinearLayout
                        style="@style/SubTitleSmallSmallLinearLayout"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sub_linearLayout_imageView_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image2" />

                        <TextView
                            style="@style/SongNameStyle"
                            android:text="@string/songName1" />

                        <TextView
                            style="@style/SingerStyle"
                            android:text="@string/singer1" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/SubTitleSmallSmallLinearLayout">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sub_linearLayout_imageView_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image3" />

                        <TextView
                            style="@style/SongNameStyle"
                            android:text="@string/songName2" />

                        <TextView
                            style="@style/SingerStyle"
                            android:text="@string/singer2" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/SubTitleSmallSmallLinearLayout">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sub_linearLayout_imageView_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image4" />

                        <TextView
                            style="@style/SongNameStyle"
                            android:text="@string/songName3" />

                        <TextView
                            style="@style/SingerStyle"
                            android:text="@string/singer3" />

                    </LinearLayout>

                </LinearLayout>
                <!--part 1 end here-->

<!--part 2 start here-->
            <LinearLayout
                style="@style/SubTitleSmallLinearLayout">

                <LinearLayout
                    style="@style/SubTitleSmallSmallLinearLayout">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sub_linearLayout_imageView_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image5" />

                    <TextView
                        style="@style/SongNameStyle"
                        android:text="@string/songName4" />

                    <TextView
                        style="@style/SingerStyle"
                        android:text="@string/singer4" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SubTitleSmallSmallLinearLayout">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sub_linearLayout_imageView_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image6" />

                    <TextView
                        style="@style/SongNameStyle"
                        android:text="@string/songName5" />

                    <TextView
                        style="@style/SingerStyle"
                        android:text="@string/singer5" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SubTitleSmallSmallLinearLayout">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sub_linearLayout_imageView_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image7" />

                    <TextView
                        style="@style/SongNameStyle"
                        android:text="@string/songName6" />

                    <TextView
                        style="@style/SingerStyle"
                        android:text="@string/singer6" />

                </LinearLayout>

            </LinearLayout>

                <!--part 2 end here-->

            </LinearLayout>
<!--recommend for you end here-->

            <!--original recommend start here-->
            <LinearLayout style="@style/SubTitleLinearLayout">

                <TextView
                    style="@style/SubTitle"
                    android:text="@string/original_recommendation" />

                <!--part 3 start here-->
                <LinearLayout
                    style="@style/SubTitleSmallLinearLayout">

                    <LinearLayout
                        style="@style/SubTitleSmallSmallLinearLayout">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sub_linearLayout_imageView_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image8" />

                        <TextView
                            style="@style/SongNameStyle"
                            android:text="@string/songName7" />

                        <TextView
                            style="@style/SingerStyle"
                            android:text="@string/singer7" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/SubTitleSmallSmallLinearLayout">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sub_linearLayout_imageView_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image9" />

                        <TextView
                            style="@style/SongNameStyle"
                            android:text="@string/songName8" />

                        <TextView
                            style="@style/SingerStyle"
                            android:text="@string/singer8" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/SubTitleSmallSmallLinearLayout">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/sub_linearLayout_imageView_height"
                            android:scaleType="centerCrop"
                            android:src="@drawable/image10" />

                        <TextView
                            style="@style/SongNameStyle"
                            android:text="@string/songName9" />

                        <TextView
                            style="@style/SingerStyle"
                            android:text="@string/singer9" />

                    </LinearLayout>

                </LinearLayout>
                <!--part 3 end here-->

<!--part 4 start here-->
            <LinearLayout
                style="@style/SubTitleSmallLinearLayout">

                <LinearLayout
                    style="@style/SubTitleSmallSmallLinearLayout">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sub_linearLayout_imageView_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image11" />

                    <TextView
                        style="@style/SongNameStyle"
                        android:text="@string/songName10" />

                    <TextView
                        style="@style/SingerStyle"
                        android:text="@string/singer10" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SubTitleSmallSmallLinearLayout">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sub_linearLayout_imageView_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image12" />

                    <TextView
                        style="@style/SongNameStyle"
                        android:text="@string/songName11" />

                    <TextView
                        style="@style/SingerStyle"
                        android:text="@string/singer11" />

                </LinearLayout>

                <LinearLayout
                    style="@style/SubTitleSmallSmallLinearLayout">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sub_linearLayout_imageView_height"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image13" />

                    <TextView
                        style="@style/SongNameStyle"
                        android:text="@string/songName12" />

                    <TextView
                        style="@style/SingerStyle"
                        android:text="@string/singer12" />

                </LinearLayout>

            </LinearLayout>
                <!--part 4 end here-->
            </LinearLayout>
<!--original recommend end here-->
            <ImageButton
                style="@style/Advertise"
                android:layout_marginTop="@dimen/advertise_marginTop"
                android:src="@drawable/under" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
